<mvc:View controllerName="sap.pieces.controller.splitter.Splitter"
          xmlns:l="sap.ui.layout"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core"
          xmlns="sap.m"
          height="100%">
    <Page
            showNavButton="true"
            navButtonPress="onNavBack">
        <content>
            <l:Splitter>
                <Button width="100%" text="Content 1" type="Accept">
                    <layoutData>
                        <l:SplitterLayoutData size="300px"/>
                    </layoutData>
                </Button>
                <Button width="100%" text="Content 2" type="Reject">
                    <layoutData>
                        <l:SplitterLayoutData size="auto"/>
                    </layoutData>
                </Button>
                <Button width="100%" text="Content 3" type="Emphasized">
                    <layoutData>
                        <l:SplitterLayoutData size="30%" minSize="200px"/>
                    </layoutData>
                </Button>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
