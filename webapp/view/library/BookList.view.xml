<mvc:View
        controllerName="sap.pieces.controller.library.BookList"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
    <Page
            showNavButton="true"
            navButtonPress="onNavBack">
        <content>
            <Table
                    id="table"
                    width="auto"
                    visible="{=	${book>/bookList/length} > 1}"
                    items="{book>/bookList}">
                <headerToolbar>
                    <Toolbar>
                        <ToolbarSpacer/>
                        <SearchField
                                id="searchField"
                                width="auto"
                                search="onSearch"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="isbnColumn">
                        <Text text="ISBN"/>
                    </Column>
                    <Column id="nameColumn">
                        <Text text="Name"/>
                    </Column>
                    <Column id="priceColumn">
                        <Text text="Price"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                            type="Navigation"
                            press="onPress">
                        <cells>
                            <ObjectIdentifier title="{book>Id}"/>
                            <Text text="{book>Name}"/>
                            <Text text="{book>Price}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>

